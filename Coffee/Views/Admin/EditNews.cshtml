@using Coffee.Models.Entities
@model News
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Edit News";
}

<div class="text-center">
    <h1 class="display-4">Edit news</h1>
</div>

<form method="post" action="">
    <div class="mb-3">
        <label class="form-label">Title</label>
        <input type="text" class="form-control" asp-for="Title">
    </div>
    <div class="mb-3">
        <label class="form-label">Text news</label>
        <textarea class="form-control" rows="5" asp-for="Text"></textarea>
    </div>
    <div class="mb-3">
        <label for="" class="form-label">Choose publication date and time</label>
        <input type="text" id="publicationDateInput" class="form-control date" asp-for="Date">
    </div>
    <div class="mt-3">
        <div class="form-check">
            <input type="checkbox" class="form-check-input" asp-for="IsActive" checked>
            <label class="form-check-label">Is active</label>
        </div>
    </div>
    <br />
    <button type="submit" class="btn btn-primary rounded-pill">Done</button>
</form>
@section Scripts {
    <script type="text/javascript">
        $('#publicationDateInput').datepicker({
            format: 'dd/mm/yyyy'
        })
    </script>
}


