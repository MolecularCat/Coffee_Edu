@using Microsoft.AspNetCore.Identity;
@{
    ViewData["Title"] = "Users list";
}

<div class="text-center">
    <h1 class="display-4">Users</h1>

    <table cellpadding="10">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Registration date</th>
            <th>Lockout End</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td>@item.Created.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@item.LockoutEnd?.ToString("dd.MM.yyyy HH:mm")</td>
                <td><a href="/admin/users/block/@item.Id">block</a></td>
                <td><a href="/admin/users/unblock/@item.Id">unblock</a></td>
            </tr>
        }
        </table>
</div>